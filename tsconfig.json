{
    "compilerOptions": {
      "module": "commonjs",
      "target": "ESNext",
      "moduleResolution": "node",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "jsx": "react-jsx", // 此项以支持 JSX
      "forceConsistentCasingInFileNames": true,
      "sourceMap": true,
      "outDir": "./dist",
      "baseUrl": ".",
      "paths": {
        "*": ["node_modules/*"]
      }
    },
    "include": ["src/**/*.ts", "src/**/*.tsx", "src/main/index.js"],
    "exclude": ["node_modules", "dist"]
  }
      