{
  "name": "harmony-package",
  "author": "Rui",
  "version": "1.0.0",
  "private": true,
  "main": "main.js",
  "homepage": ".",
  "build": {
    "productName": "HarmonyOS Package Tool",
    "appId": "vip.lovek.oh-package",
    "icon": "public/logo.png",
    "artifactName": "${productName}-${version}-${arch}.${ext}",
    "directories": {
      "buildResources": ".",
      "output": "release/build"
    },
    "files": [
      "main.js",
      "preload.js",
      "package.json",
      "build/**/*",
      "node_modules/**/*",
      "hdc/**/*"
    ],
    "extraResources": [
      {
        "from": "hdc",
        "to": "hdc",
        "filter": [
          "**/*"
        ]
      }
    ],
    "win": {
      "target": [
        "nsis"
      ],
      "icon": "public/logo.ico"
    },
    "mac": {
      "target": [
        "dmg"
      ],
      "icon": "public/logo.icns",
      "x64ArchFiles": "*"
    },
    "dmg": {
      "backgroundColor": "#fff"
    },
    "extends": null
  },
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "@types/node": "^16.7.13",
    "@types/react-dom": "^19.0.0",
    "concurrently": "^9.1.2",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-scripts": "5.0.1",
    "typescript": "^4.4.2",
    "unzipper": "^0.12.3",
    "web-vitals": "^2.1.0"
  },
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "build:after": "concurrently \"cp -r hdc ./build/\" \"cp *.js ./build/\"",
    "electron": "electron .",
    "dev": "concurrently \"cross-env NODE_ENV=dev npm run start\" \"cross-env NODE_ENV=dev npm run electron\"",
    "package:win": "electron-builder build --win --x64",
    "package:mac": "electron-builder build --universal --mac --dir"
  },
  "eslintConfig": {
    "extends": [
      "react-app"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@types/react": "^19.1.5",
    "cross-env": "^7.0.3",
    "electron": "^34.5.6",
    "electron-builder": "^26.0.12",
    "electron-reloader": "^1.2.3"
  },
  "description": "鸿蒙安装工具",
  "repository": "git@github.com:dongyeforever/oh-package.git",
  "license": "MIT"
}